name: Deploy Diffalyze to GitHub Pages

on:
  push:
    branches: [ main ]
    paths:
      - "index.html"
      - "css/**"
      - "js/**"
      - "favicon.ico"
      - ".github/workflows/**"
  pull_request:
    branches: [ main ]

  # Allow manual runs
  workflow_dispatch:

# Required permissions for Pages
permissions:
  contents: read
  pages: write
  id-token: write

# Prevent concurrent deployments
concurrency:
  group: "pages"
  cancel-in-progress: false

jobs:
  build-and-deploy:
    name: Build and deploy to GitHub Pages
    runs-on: ubuntu-latest
    
    # Only deploy on push/manual, not for PRs
    if: github.event_name != 'pull_request'
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup Pages
        uses: actions/configure-pages@v4

      - name: Prepare site files
        run: |
          echo "ðŸ“¦ Preparing Diffalyze static files..."
          ls -la
          echo "âœ… Files ready for deployment"

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: '.'

      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4